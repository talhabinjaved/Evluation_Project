<h1> Users Tricks</h1>
<ul>
  <% @tricks.each do |trick| %>

        <div> <strong> Challenge Name: </strong>
             <%= trick.challenge.title %>
        </div>
           
        <div> <strong> User Email: </strong>

              <%= trick.customer.email %>
        </div>
        <div>  <strong> User Trick: </strong>
              <%= trick.body %>
              <div>
               <%=image_tag(trick.image ,size: "200x200")  if trick.image.attached?%>
               <%=video_tag(url_for(trick.video ),  size: "200x200", controls: true) if trick.video.attached?%>
               </div>
        </div>
          </br>
          <%= link_to "Declare Winner", rewards_give_rewards_path(:trick_id =>  trick.id,:challenge_id => trick.challenge.id), :class => "btn btn-success" %>
            </br>
            </br>
        
  <% end %>
</ul>

