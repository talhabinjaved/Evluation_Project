

<% if brand_signed_in? %>
<h1>Hello <strong><%= current_brand.name %></strong></h1>
  Logged in as <strong><%= current_brand.email %></strong>.
  <%= link_to 'Edit profile', edit_brand_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_brand_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Sign up", new_brand_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_brand_session_path, :class => 'navbar-link'  %>
<% end %>
